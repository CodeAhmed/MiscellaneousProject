@model IEnumerable<GProvSample.Models.Site>

@{
    ViewBag.Title = "Site";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <h1>
            Site List View <small><b><i>Create site or select existing site to Proceed</i></b></small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index")"><i class="fa fa-globe"></i> @ViewBag.Title</a></li>
            <li class="active">Sites Landing Page</li>
        </ol>
    </section>
    <section class="content">
        <div class="row">
            <!--Main Content-->
            <section class="content">
                <div class="row">
                    <div class="col-xs-8">
                        <!-- Horizontal Form -->
                        @Html.ActionLink("Create Site", "CreateSiteUser", "Site", null, new { @class = "modal-link btn btn-primary" })
                        <br />
                        <br />
                        <!-- /.box -->
                        <div class="box">
                            <div class="box-header">
                                <h3 class="box-title">List of All Available Sites</h3>
                            </div>
                            <!-- /.box-header -->
                            <div class="box-body">
                                <table id="siteTable" class="table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th>@Html.DisplayNameFor(model => model.SiteCode)</th>
                                            <th>@Html.DisplayNameFor(model => model.SiteName)</th>
                                            <th>Select Site</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@Html.DisplayFor(modelItem => item.SiteCode)</td>
                                                <td>@Html.DisplayFor(modelItem => item.SiteName)</td>
                                                <td><a href="@Url.Action("_TopNavigation", "Home", new { Id = item.SiteID })"><span class="fa fa-external-link"></span></a></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.box-body -->
                        </div>
                        <!-- /.box -->
                    </div>
                    <!-- /.col -->

                </div>
                <!-- /.row -->
            </section>
            <!--End Main Content-->
        </div>
    </section>


</div>

@section scripts{
    <script>
        $(function () {
            $("#siteTable").DataTable();
        });
    </script>
}

