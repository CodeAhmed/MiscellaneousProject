@model GProvSample.Models.Templates

@{
    ViewBag.Title = "Upload";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("UploadFile", "Upload", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)

    <div class="content-wrapper">
        <section class="content-header">
            <h1>
                Upload Templates <small><b><i> Select templates type to upload</i></b></small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="@Url.Action("Upload")"><i class="fa fa-upload"></i> @ViewBag.Title</a></li>
                <li class="active">Upload Template</li>
            </ol>
        </section>

        <section class="content">
            <div class="row">
                <!--Main Content-->
                <section class="content">
                    <div class="row">
                        <div class="col-sm-7">
                            <div class="box box-primary">
                                <div class="box-header with-border">
                                    <h3 class="box-title">Upload Template</h3>
                                </div>
                                <!-- /.box-header -->
                                <!-- form start -->

                                <div class="box-body">
                                    <div class="form-group">
                                        @Html.Label("Select Template", new { @class = "control-label" })
                                        @Html.DropDownListFor(model => model.Type,
                                                new SelectList(Enum.GetValues(typeof(GProvSample.Models.TemplateTypes))),
                                                "Select Template Types",
                                                new { @class = "form-control" })
                                    </div>

                                    <div class="form-group">
                                        @Html.Label("File Input", new { @class = "control-label" })
                                        <input type="file" id="InputFile" name="file" class="form-control" />
                                    </div>
                                    @TempData["Message"]
                                    @ViewBag.Message
                                </div>
                                <!-- /.box-body -->
                                <div class="box-footer">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>

                            </div>
                        </div>
                        <!-- /.col -->

                    </div>
                    <!-- /.row -->
                </section>
                <!--End Main Content-->
            </div>
        </section>
    </div>

}

